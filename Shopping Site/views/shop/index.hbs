<div class="row">
  <div class="col-sm-6 col-md-2 col-md-offset-5 col-sm-offset-3">
    <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
    {{successMsg}}
    </div>
  </div>
</div>

{{#each products}}
    <div class="row">
      {{#each this}}
        <div class="col-sm-1 col-md-4">
          <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="..." class="img-responsive">
            <div class="caption">
              <h3>{{this.title}}</h3>
              <p class="description">{{this.description}}</p>
              <div class="clearfix">
                <div class="price">${{this.price}}</div>
                <a href="/item/add-item/{{this._id}}" class="btn btn-success cart-button" role="button">Add to Cart</a>
              </div>
            </div>
          </div>
       </div>
  {{/each}}
   </div>
{{/each}}